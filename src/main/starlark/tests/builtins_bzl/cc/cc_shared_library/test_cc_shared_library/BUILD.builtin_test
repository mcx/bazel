)

cc_shared_library(
    name = "lib_with_no_exporting_roots_2",
    deps = [":static_lib_no_exporting"],
    dynamic_deps = [":lib_with_no_exporting_roots_3"],
)

cc_shared_library(
    name = "lib_with_no_exporting_roots_3",
