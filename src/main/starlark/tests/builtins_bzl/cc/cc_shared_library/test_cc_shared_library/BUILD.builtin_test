    name = "static_lib_no_exporting",
    srcs = [
        "bar.cc",
        "bar.h",
    ],
    tags = ["NO_EXPORTING"],
)

cc_library(
    name = "static_lib_exporting",
    srcs = [
        "bar2.cc",
        "bar2.h",
    ],
)

cc_shared_library(
    name = "lib_with_no_exporting_roots_1",
